
<div class="card horizontal">
    <div class="card-image" style="height: 300px; width: 300px;">
        <img src="/assets/Iris.jpg" style="height: 100%; width: 100%; object-fit: contain">
    </div>
    <div class="card-stacked">
        <div class="card-content">
            <!-- <span class="card-title activator grey-text text-darken-4">Card Title<i class="material-icons right">more_vert</i></span> -->
            <a class="btn-floating right waves-effect waves-light red"> <i class="material-icons right">close</i></a>
            <div class="col s12">
                <div class="row">
                    <div class="col s2 ">
                        <span > Name:</span>
                    </div>
                    <div class="col s6">
                        <span> <b><%= myPlantsList[i].name %></b>
                        </span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col s2 ">
                        <span > Last water time:</span>
                    </div>
                    <div class="col s6">
                        <span> <b><%= myPlantsList[i].name %></b>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s2 ">
                        <span > Next water time:</span>
                    </div>
                    <div class="col s6">
                        <span> <b><%= myPlantsList[i].name %></b>
                        </span>
                    </div>
                </div>
            </div>
           
            
        </div>
        <div class="card-action">
            <a id="donePlantButton" href="#!" class=" waves-effect waves-light btn">Done</a>
            <a id="laterPlantButton" href="#!" class=" waves-effect waves-light recordButton right">Later</a>
        </div>
    </div>
</div>
